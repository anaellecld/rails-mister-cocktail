
<div class="container">
  <div class="my-2">
    <h1 class="text-center">What's your cocktail's name?</h1>
      <%= simple_form_for(@cocktail) do |f| %>
        <%= f.input :name %>
        <%= f.submit 'Add a cocktail', class: "btn btn-primary"%>
      <% end %>

    <br>

    <%= link_to 'Back', cocktails_path, class: 'btn btn-ghost:hover' %>
  </div>
</div>
